# ~/.bashrc: executed by bash(1) for non-login shells.

# You may uncomment the following lines if you want `ls' to be colorized:
export LS_OPTIONS='--color=auto'
eval "`dircolors`"
alias ls='ls $LS_OPTIONS'
alias ll='ls $LS_OPTIONS -l'
alias l='ls $LS_OPTIONS -lA'
alias la='ls -al'

# Shows Absolute Path Always
C_RED="\[\033[0;31m\]"
C_GREEN="\[\033[0;32m\]"
C_LIGHT_GRAY="\[\033[1;37m\]"
C_RESET="\[\033[0m\]"

C_BROWN="\[\033[0;33m\]"
C_BLUE="\[\033[0;34m\]"
C_PURPLE="\[\033[0;35m\]"
C_CYAN="\[\033[0;36m\] "
C_GRAY="\[\033[1;30m\]"
C_WHITE="\[\033[1;37m\]"
C_YELLOW="\[\033[1;33m\]"

C_LIGHT_BLUE="\[\033[1;34m\]"
C_LIGHT_CYAN="\[\033[1;36m\]"
C_LIGHT_PURPLE="\[\033[1;35m\]"
C_LIGHT_RED="\[\033[1;31m\]"
C_LIGHT_GREEN="\[\033[1;32m\]"

PS1="$C_LIGHT_RED[$C_LIGHT_GREEN\u@\h$C_LIGHT_RED|$C_LIGHT_CYAN\w$C_LIGHT_RED] $C_RESET\n$C_LIGHT_RED[$C_LIGHT_GREEN\!$C_LIGHT_RED]$C_LIGHT_GRAY\\$ $C_RESET"

# Show open ports
alias ports='netstat -tulanp'

# Ignore history duplicates
export HISTIGNORE="&"

# History size
export HISTSIZE=1000000
export HISTFILESIZE=1000000000

# History date & time
HISTTIMEFORMAT="%d/%m/%y %T "

# Fast cd upwards
alias ..="cd .."
alias ...="cd ../../"
alias ....="cd ../../../"
alias .....="cd ../../../"

# List all directories in current directories
alias ldir='ls -l | grep ^d'

# RM Safety Net
alias rm='rm -i'

# Useful df command
alias df='df -h'

# VIM Alias
alias vi=vim

# Log Aliases
alias grep='grep --color=auto'
alias egrep='egrep --colo=auto'
alias fgrep='fgrep --color=auto'

# handy short cuts #
alias h='history'
alias j='jobs -l'

## Ping
# Stop after sending count ECHO_REQUEST packets #
alias ping='ping -c 5'
# Do not wait interval 1 seconds, go fast #
alias fastping='ping -c 100 -s.2'

# apt
alias apt-get="sudo apt-get"
